<div class="card ">
  {{#if title.length}}
  <div class="card-header"><b>{{title.length}}</b>{{did}}</div>
  {{else}}
  <div class="card-header">{{didnot}}</div>
  {{/if}}
  <div class="card-body d-flex flex-wrap">
    {{#ifCond title user.Comments}}
    {{#each user.Comments}}
    <div class="mx-2" width="80px">
      <a href='/restaurants/{{this.Restaurant.id}}'>
        <img src="{{this.Restaurant.image}}" class='card-img-top img-fluid me-2 mb-2' alt='restaurant'
          style='width: 80px' />
      </a>
    </div>
    {{/each}}
    {{/ifCond}}
    {{#each title}}
    <div class="mx-2" width="80px">
      {{#ifCond ../data 'user'}}
      <a href='/users/{{this.id}}'>
        <img src="{{image}}" class='card-img-top img-fluid me-2 mb-2' alt='{{alt}}' style='width: 80px' />
      </a>
      {{/ifCond}}
      {{#ifCond ../data 'restaurant'}}
      <a href='/restaurants/{{this.id}}'>
        <img src="{{image}}" class='card-img-top img-fluid me-2 mb-2' alt='{{alt}}' style='width: 80px' />
      </a>
      {{/ifCond}}
    </div>
    {{/each}}
  </div>
</div>